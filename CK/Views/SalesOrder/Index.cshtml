        }).container().appendTo($('#example_wrapper').find('.col-sm-6:eq(0)'));

        // Add tooltip to delete button
        $('.hidedeletebtn').tooltip({
            placement: 'top',
            trigger: 'hover'
        });
    </script>
</body>
</html>