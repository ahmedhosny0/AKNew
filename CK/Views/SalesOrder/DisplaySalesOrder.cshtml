<div class="container">
    <h1>Sales Order Details</h1>
    <p><strong>Sales Code:</strong> @Model.Header.SalesCode</p>
    <p><strong>Date:</strong> @Model.Header.Createddatetime.ToShortDateString()</p>
    <p><strong>Customer:</strong> @Model.Header.CustomerCode</p>
    <p><strong>Branch:</strong> @Model.Header.BranchCode</p>
    <p><strong>Category:</strong> @Model.Header.CategoryCode</p>
    <p><strong>Notes:</strong> @Model.Header.Notes</p>

    <h2>Order Details</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.Details)
            {
                <tr>
                    <td>@detail.ItemCode</td>
                    <td>@detail.Price</td>
                    <td>@detail.Quantity</td>
                    <td>@(detail.Price * detail.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
