@{
    ViewData["Title"] = "Add NEW Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!Doctype html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="/js/datatables.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        /* Form styles */
        .form-group {
            margin-bottom: 15px;
        }

        /* Button styles */
        .btn-primary {
            margin-top: 20px;
        }

        /* Responsive grid layout */

        .fileds {
            display: inline-block;
            margin: 10px 50px;
            font-family: auto;
            font-size: 21px;
        }

        .filed label {
            padding: 3%;
        }

        ul {
            width: 1500px;
        }

        .Title {
            background-color: #b50101;
            font-family: emoji;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <form asp-controller="Accounts" asp-action="AInvEditItem" method="post">
        <ul>
            <li class="fileds">
                <label>ItemCode</label>
                <input type="number" style="font-weight:bold" class="form-control" name="ItemCode" value="@ViewBag.Branches">
            </li>
            <br />
            <li class="fileds">
                <label>Tax</label>
                <input type="text" name="Tax" class="form-control" style="width:250px" value="@ViewBag.Users" />
            </li>
        </ul>
        <button type="submit" class="btn btn-primary">Edit Item</button>
    </form>
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.buttons.min.js"></script>
    <script src="/js/jszip.min.js"></script>
    <script src="/js/buttons.html5.min.js"></script>
    <script src="/js/pdfmake.min.js"></script>
    <script src="/js/vfs_fonts.js"></script>
    <script>
        var table = $('#example').DataTable({
            pageLength: 20,
            lengthChange: true,
            dom: 'Bfrtip', // This keeps the buttons in the DataTables control
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: 'Export To Excel',
                    className: 'export-excel-button' // Add a class for easier selection later
                }
            ]
        });

        // After initializing the table, manually move the Excel export button to the top
        $('.export-excel-button').detach().prependTo($('#example_wrapper'));

        // Initialize the table again after moving the button
        table.buttons().container().appendTo('#example_wrapper');
    </script>
</body>
</html>





