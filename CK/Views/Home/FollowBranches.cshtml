        // Function to save selected checkboxes to localStorage for departments
        function saveSelectedItems(dropdownClassName, hiddenInputId) {
            let selectedItems = [];
            document.querySelectorAll(`${dropdownClassName} .dropdown-menu .form-check-input`).forEach(checkbox => {
                if (checkbox.checked) {
                    selectedItems.push(checkbox.value);
                }
            });
            localStorage.setItem(hiddenInputId, JSON.stringify(selectedItems));
            document.getElementById(hiddenInputId).value = selectedItems.join(','); // Update hidden input
        }

        // Generalized function to restore selected items from localStorage
        function restoreSelectedItems(dropdownClassName, hiddenInputId) {
            let selectedItemValues = JSON.parse(localStorage.getItem(hiddenInputId)) || [];
            document.querySelectorAll(`${dropdownClassName} .dropdown-menu .form-check-input`).forEach(checkbox => {
                checkbox.checked = selectedItemValues.includes(checkbox.value);
            });
        }

        // Function to initialize saving and restoring for multiple dropdowns
        function initDropdowns(dropdownsConfig) {
            dropdownsConfig.forEach(config => {
                // Restore selected items on page load
                document.addEventListener('DOMContentLoaded', function () {
                    restoreSelectedItems(config.dropdownClassName, config.hiddenInputId);
                });

                // Attach event listener to save state when checkboxes change
                document.querySelectorAll(`${config.dropdownClassName} .dropdown-menu .form-check-input`).forEach(checkbox => {
                    checkbox.addEventListener('change', function () {
                        saveSelectedItems(config.dropdownClassName, config.hiddenInputId);
                    });
                });
            });
