@model CK.Models.TopSoft.ZoneCode
@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Store</title>
    <link rel="stylesheet" type="text/css" href="~/css/Sales/main.css" />
</head>
<body>
    <div class="form-container">
    <button class="btn Title">Edit Zone</button>

    <form asp-action="UpdateZoneCode" asp-asp-controller="Zone" method="post">
    <ul>
            <input type="hidden" asp-for="Serial" />
            <li class="fileds">
                <label asp-for="Code">Code</label>
                <input asp-for="Code" class="form-control" style="width:250px" readonly>
            </li>
            <li class="fileds">
                <label asp-for="Name">ZoneName</label>
                <input asp-for="Name" class="form-control" style="width:250px" required />
        </li>
        </ul>
        <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
    </div>
</body>
</html>

